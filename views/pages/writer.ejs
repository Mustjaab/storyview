<%- include('../partials/head', {title: title}) %>
    <div class="container">
        <div class="writer-header">
            <h2>Story Writer</h2>
            <div class="writer-controls">
                <button onclick="toggleFocusMode()" id="focusModeBtn" class="btn-outline">Focus Mode</button>
                <button onclick="extractCharactersFromStory()" class="btn-outline" id="extractCharsBtn" style="display: none;">Extract Characters</button>
                <button onclick="saveStory()" class="btn-primary">Save Story</button>
                <button onclick="exportStory()" class="btn-secondary">Export</button>
            </div>
        </div>

        <% if (prompt) { %>
            <div class="current-prompt">
                <h4>üìù Your Prompt:</h4>
                <p>"<%= prompt %>"</p>
                <button onclick="clearPrompt()" class="btn-small">Clear Prompt</button>
            </div>
        <% } %>

        <div class="writer-layout">
            <div class="sidebar" id="sidebar">
                <div class="sidebar-section">
                    <h4>Your Characters</h4>
                    <div id="characterQuickList">
                        <!-- Characters will be loaded here -->
                    </div>
                </div>

                <div class="sidebar-section">
                    <h4>Recent Stories</h4>
                    <div id="recentStoriesList">
                        <!-- Recent stories will be loaded here -->
                    </div>
                </div>

                <!-- Character Extraction Panel -->
                <div class="sidebar-section" id="extractedCharactersPanel" style="display: none;">
                    <h4>üìù Characters Found in Story</h4>
                    <div id="extractedCharactersList">
                        <!-- Extracted characters will appear here -->
                    </div>
                    <div class="extraction-actions" id="extractionActions" style="display: none;">
                        <button onclick="saveExtractedCharacters()" class="btn-small" style="background: #27ae60;">Save to Character Manager</button>
                        <button onclick="hideExtractionPanel()" class="btn-small">Cancel</button>
                    </div>
                </div>
            </div>

            <div class="writing-area">
                <div class="story-metadata">
                    <input type="text" id="storyTitle" placeholder="Untitled Story" class="story-title-input">
                    <div class="word-count-display">
                        <span id="wordCount">0</span> words
                    </div>
                </div>

                <textarea id="storyContent" placeholder="Once upon a time..." autofocus></textarea>

                <div class="writing-stats">
                    <div class="stat">
                        <span class="stat-label">Words:</span>
                        <span id="wordsStat">0</span>
                    </div>
                    <div class="stat">
                        <span class="stat-label">Characters:</span>
                        <span id="charsStat">0</span>
                    </div>
                    <div class="stat">
                        <span class="stat-label">Reading Time:</span>
                        <span id="timeStat">0 min</span>
                    </div>
                    <div class="stat">
                        <span class="stat-label">Last Saved:</span>
                        <span id="lastSaved">Never</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    let currentStoryId = null;
    let autoSaveInterval;
    let extractedCharacters = [];

    // Load story from URL parameter or create new
    function loadStory() {
        const urlParams = new URLSearchParams(window.location.search);
        const prompt = urlParams.get('prompt') || '<%= prompt %>';
        const loadId = urlParams.get('load');
        
        if (loadId) {
            // Load existing story
            const stories = JSON.parse(localStorage.getItem('stories') || '[]');
            const story = stories.find(s => s.id === loadId);
            if (story) {
                currentStoryId = story.id;
                document.getElementById('storyTitle').value = story.title;
                document.getElementById('storyContent').value = story.content;
                document.getElementById('lastSaved').textContent = new Date(story.updatedAt).toLocaleString();
                updateWordCount();
            }
        } else if (prompt) {
            // New story with prompt
            document.getElementById('storyContent').value = `Story Prompt: "${prompt}"\n\n`;
        }
        
        loadCharacterQuickList();
        loadRecentStories();
        startAutoSave();
        
        // ALWAYS check for character extraction on load
        checkCharacterExtraction();
    }

    // Check if story has potential characters to extract - SIMPLIFIED VERSION
    function checkCharacterExtraction() {
        const content = document.getElementById('storyContent').value;
        const extractBtn = document.getElementById('extractCharsBtn');
        
        // Show button if there's any substantial content
        if (content.length > 20) {
            extractBtn.style.display = 'inline-block';
            extractBtn.disabled = false;
        } else {
            extractBtn.style.display = 'none';
        }
    }

    // Extract characters from story content
    function extractCharactersFromStory() {
        const content = document.getElementById('storyContent').value;
        const title = document.getElementById('storyTitle').value || 'Current Story';
        
        if (content.length < 20) {
            alert('Write more content (at least 20 characters) to extract characters!');
            return;
        }
        
        console.log('üîÑ Starting character extraction...');
        
        // Show loading state
        const extractBtn = document.getElementById('extractCharsBtn');
        extractBtn.innerHTML = '<div class="loading-spinner"></div> Analyzing...';
        extractBtn.disabled = true;
        
        try {
            // Use setTimeout to allow UI to update
            setTimeout(() => {
                extractedCharacters = mlAnalyzer.extractCharactersFromText(content, title);
                console.log('‚úÖ Extracted characters:', extractedCharacters);
                
                extractBtn.innerHTML = 'Extract Characters';
                extractBtn.disabled = false;
                
                if (extractedCharacters.length === 0) {
                    this.showExtractionResult('No characters found', 'Try using proper names like "John", "Sarah", "Dr. Smith" in your story.', 'warning');
                    return;
                }
                
                this.showExtractionResult(`Found ${extractedCharacters.length} characters`, 'Review and save them to your character manager', 'success');
                displayExtractedCharacters(extractedCharacters);
                
                // Track the extraction
                if (typeof mlTracker !== 'undefined') {
                    mlTracker.trackCharacterExtraction(extractedCharacters.length, extractedCharacters.length);
                }
                
            }, 100);
        } catch (error) {
            console.error('‚ùå Error extracting characters:', error);
            extractBtn.innerHTML = 'Extract Characters';
            extractBtn.disabled = false;
            this.showExtractionResult('Extraction failed', error.message, 'error');
        }
    }

    // Show extraction result message
    function showExtractionResult(title, message, type = 'info') {
        const panel = document.getElementById('extractedCharactersPanel');
        const header = panel.querySelector('h4');
        
        // Update header with result
        header.innerHTML = `
            <span class="result-icon ${type}">${type === 'success' ? '‚ú®' : type === 'warning' ? '‚ö†Ô∏è' : '‚ùå'}</span>
            ${title}
        `;
        
        // Show message temporarily
        const messageEl = document.createElement('div');
        messageEl.className = `extraction-message ${type}`;
        messageEl.innerHTML = message;
        header.parentNode.insertBefore(messageEl, header.nextSibling);
        
        // Remove message after 3 seconds
        setTimeout(() => {
            if (messageEl.parentNode) {
                messageEl.parentNode.removeChild(messageEl);
            }
        }, 3000);
    }

    // Display extracted characters in the panel
    function displayExtractedCharacters(characters) {
        const panel = document.getElementById('extractedCharactersPanel');
        const list = document.getElementById('extractedCharactersList');
        const actions = document.getElementById('extractionActions');
        
        list.innerHTML = characters.map((char, index) => `
            <div class="extracted-character" data-confidence="${char.confidence}">
                <div class="character-header">
                    <div class="character-badge">
                        <span class="confidence-dot" style="background: ${this.getConfidenceColor(char.confidence)}"></span>
                        <span class="character-name-preview">${char.name}</span>
                    </div>
                    <div class="character-meta">
                        <span class="mention-count">${char.mentionCount} mention${char.mentionCount !== 1 ? 's' : ''}</span>
                        <span class="confidence-score">${Math.round(char.confidence * 100)}%</span>
                    </div>
                </div>
                
                <div class="character-details">
                    <div class="input-group">
                        <label>Character Name:</label>
                        <input type="text" value="${char.name}" class="char-name-input" 
                               onchange="updateExtractedCharacter(${index}, 'name', this.value)"
                               placeholder="Enter character name">
                    </div>
                    
                    <div class="input-group">
                        <label>Character Role:</label>
                        <select onchange="updateExtractedCharacter(${index}, 'role', this.value)" class="char-role-select">
                            <option value="">Choose a role...</option>
                            <option value="Protagonist" ${char.role === 'Protagonist' ? 'selected' : ''}>üåü Protagonist</option>
                            <option value="Antagonist" ${char.role === 'Antagonist' ? 'selected' : ''}>üëø Antagonist</option>
                            <option value="Supporting" ${char.role === 'Supporting' ? 'selected' : ''}>ü§ù Supporting</option>
                            <option value="Mentor" ${char.role === 'Mentor' ? 'selected' : ''}>üßô Mentor</option>
                            <option value="Love Interest" ${char.role === 'Love Interest' ? 'selected' : ''}>üíñ Love Interest</option>
                            <option value="Comic Relief" ${char.role === 'Comic Relief' ? 'selected' : ''}>üòÇ Comic Relief</option>
                            <option value="Villain" ${char.role === 'Villain' ? 'selected' : ''}>ü¶π Villain</option>
                            <option value="Hero" ${char.role === 'Hero' ? 'selected' : ''}>ü¶∏ Hero</option>
                            <option value="Sidekick" ${char.role === 'Sidekick' ? 'selected' : ''}>üé≠ Sidekick</option>
                        </select>
                    </div>
                </div>
                
                <div class="character-actions">
                    <button onclick="removeExtractedCharacter(${index})" class="btn-remove" title="Remove character">
                        <span class="remove-icon">üóëÔ∏è</span>
                        Remove
                    </button>
                </div>
            </div>
        `).join('');
        
        panel.style.display = 'block';
        actions.style.display = 'block';
        
        // Add smooth animation
        panel.style.opacity = '0';
        panel.style.transform = 'translateY(-10px)';
        
        setTimeout(() => {
            panel.style.opacity = '1';
            panel.style.transform = 'translateY(0)';
            panel.style.transition = 'all 0.3s ease';
        }, 50);
        
        // Scroll to panel smoothly
        panel.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    }

    // Get confidence color based on score
    function getConfidenceColor(confidence) {
        if (confidence >= 0.8) return '#27ae60'; // Green
        if (confidence >= 0.6) return '#f39c12'; // Orange
        if (confidence >= 0.4) return '#e67e22'; // Dark orange
        return '#e74c3c'; // Red
    }

    // Update an extracted character's property
    function updateExtractedCharacter(index, property, value) {
        if (extractedCharacters[index]) {
            extractedCharacters[index][property] = value;
            
            // Update the confidence dot color if name changes significantly
            if (property === 'name' && value.length > 0) {
                const characterEl = document.querySelectorAll('.extracted-character')[index];
                if (characterEl) {
                    const confidenceDot = characterEl.querySelector('.confidence-dot');
                    const namePreview = characterEl.querySelector('.character-name-preview');
                    if (confidenceDot && namePreview) {
                        namePreview.textContent = value;
                        // Slightly increase confidence when user confirms name
                        extractedCharacters[index].confidence = Math.min(0.95, extractedCharacters[index].confidence + 0.1);
                        confidenceDot.style.background = this.getConfidenceColor(extractedCharacters[index].confidence);
                    }
                }
            }
        }
    }

    // Remove an extracted character with animation
    function removeExtractedCharacter(index) {
        const characterEl = document.querySelectorAll('.extracted-character')[index];
        if (characterEl) {
            characterEl.style.transform = 'translateX(-100%)';
            characterEl.style.opacity = '0';
            characterEl.style.transition = 'all 0.3s ease';
            
            setTimeout(() => {
                extractedCharacters.splice(index, 1);
                if (extractedCharacters.length === 0) {
                    hideExtractionPanel();
                } else {
                    displayExtractedCharacters(extractedCharacters);
                }
            }, 300);
        }
    }

    // Save extracted characters to character manager
    function saveExtractedCharacters() {
        const validCharacters = extractedCharacters.filter(char => 
            char.name && char.name.trim() !== '' && char.role
        );
        
        if (validCharacters.length === 0) {
            this.showSaveResult('No valid characters', 'Please provide names and roles for at least one character.', 'warning');
            return;
        }
        
        const existingCharacters = JSON.parse(localStorage.getItem('characters') || '[]');
        const existingNames = new Set(existingCharacters.map(c => c.name.toLowerCase()));
        
        const newCharacters = validCharacters.filter(char => 
            !existingNames.has(char.name.toLowerCase())
        ).map(char => ({
            id: 'char_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9),
            name: char.name,
            role: char.role,
            description: `Discovered in story: ${char.sourceStory}. Mentioned ${char.mentionCount} times.`,
            goals: '',
            createdAt: new Date().toISOString(),
            discovered: true,
            initialMentions: char.mentionCount,
            confidence: char.confidence
        }));
        
        if (newCharacters.length === 0) {
            this.showSaveResult('No new characters', 'All extracted characters already exist in your character manager.', 'info');
            hideExtractionPanel();
            return;
        }
        
        const allCharacters = [...existingCharacters, ...newCharacters];
        localStorage.setItem('characters', JSON.stringify(allCharacters));
        
        // Show success animation
        this.showSaveResult('Characters saved!', `${newCharacters.length} characters added to your character manager.`, 'success');
        
        // Animate the save button
        const saveBtn = document.querySelector('.extraction-actions .btn-small[style*="background: #27ae60"]');
        if (saveBtn) {
            saveBtn.innerHTML = '‚úì Saved!';
            saveBtn.style.background = '#2ecc71';
            setTimeout(() => {
                saveBtn.innerHTML = 'Save to Character Manager';
                saveBtn.style.background = '#27ae60';
            }, 2000);
        }
        
        setTimeout(() => {
            hideExtractionPanel();
            loadCharacterQuickList();
            
            // Refresh ML analysis with new characters
            try {
                mlAnalyzer.buildCharacterStoryConnections(
                    JSON.parse(localStorage.getItem('stories') || '[]'),
                    allCharacters
                );
            } catch (error) {
                console.error('Error refreshing ML analysis:', error);
            }
        }, 1500);
    }

    // Show save result message
    function showSaveResult(title, message, type = 'info') {
        const actions = document.getElementById('extractionActions');
        const messageEl = document.createElement('div');
        messageEl.className = `save-result-message ${type}`;
        messageEl.innerHTML = `
            <strong>${title}</strong>
            <span>${message}</span>
        `;
        actions.parentNode.insertBefore(messageEl, actions);
        
        // Remove message after 3 seconds
        setTimeout(() => {
            if (messageEl.parentNode) {
                messageEl.parentNode.removeChild(messageEl);
            }
        }, 3000);
    }

    // Hide the extraction panel with animation
    function hideExtractionPanel() {
        const panel = document.getElementById('extractedCharactersPanel');
        const actions = document.getElementById('extractionActions');
        
        panel.style.opacity = '0';
        panel.style.transform = 'translateY(-10px)';
        panel.style.transition = 'all 0.3s ease';
        
        setTimeout(() => {
            panel.style.display = 'none';
            actions.style.display = 'none';
            extractedCharacters = [];
        }, 300);
    }

    // Load characters for quick reference
    function loadCharacterQuickList() {
        const characters = JSON.parse(localStorage.getItem('characters') || '[]');
        const characterList = document.getElementById('characterQuickList');
        
        if (characters.length === 0) {
            characterList.innerHTML = '<p class="no-data">No characters yet. <a href="/characters">Create some!</a></p>';
            return;
        }
        
        // Show discovered characters with a different style
        characterList.innerHTML = characters.slice(0, 8).map(character => `
            <div class="quick-character ${character.discovered ? 'discovered-character' : ''}" onclick="insertText('${character.name.replace(/'/g, "\\'")}')">
                <div class="quick-character-content">
                    <strong>${character.name}</strong>
                    ${character.role ? `<span class="quick-character-role">${character.role} ${character.discovered ? '‚ú®' : ''}</span>` : ''}
                </div>
                ${character.discovered ? `<div class="discovery-badge">Discovered</div>` : ''}
            </div>
        `).join('');
    }

    // Load recent stories with delete functionality
    function loadRecentStories() {
        const stories = JSON.parse(localStorage.getItem('stories') || '[]');
        const recentStoriesList = document.getElementById('recentStoriesList');
        
        if (stories.length === 0) {
            recentStoriesList.innerHTML = '<p class="no-data">No stories yet</p>';
            return;
        }
        
        recentStoriesList.innerHTML = stories.slice(0, 5).map(story => `
            <div class="recent-story">
                <div class="recent-story-content" onclick="loadStoryById('${story.id}')">
                    <strong>${story.title || 'Untitled'}</strong>
                    <div class="recent-story-meta">
                        <span class="story-date">${new Date(story.updatedAt).toLocaleDateString()}</span>
                        <span class="story-words">${story.wordCount || 0} words</span>
                    </div>
                </div>
                <button onclick="event.stopPropagation(); deleteStory('${story.id}')" class="btn-delete" title="Delete story">
                    <span class="delete-icon">√ó</span>
                </button>
            </div>
        `).join('');
    }

    // Load specific story
    function loadStoryById(storyId) {
        window.location.href = `/writer?load=${storyId}`;
    }

    // Delete story
    function deleteStory(storyId) {
        if (confirm('Are you sure you want to delete this story? This action cannot be undone.')) {
            const stories = JSON.parse(localStorage.getItem('stories') || '[]');
            const filteredStories = stories.filter(s => s.id !== storyId);
            localStorage.setItem('stories', JSON.stringify(filteredStories));
            
            // If we're currently viewing the deleted story, clear the editor
            if (currentStoryId === storyId) {
                currentStoryId = null;
                document.getElementById('storyTitle').value = '';
                document.getElementById('storyContent').value = '';
                document.getElementById('lastSaved').textContent = 'Never';
                updateWordCount();
            }
            
            loadRecentStories();
        }
    }

    // Update word count and stats
    function updateWordCount() {
        const content = document.getElementById('storyContent').value;
        const words = content.trim() ? content.trim().split(/\s+/).length : 0;
        const characters = content.length;
        const readingTime = Math.ceil(words / 200); // Average reading speed
        
        document.getElementById('wordCount').textContent = words;
        document.getElementById('wordsStat').textContent = words;
        document.getElementById('charsStat').textContent = characters;
        document.getElementById('timeStat').textContent = readingTime + ' min';
    }

    // Insert text at cursor position
    function insertText(text) {
        const textarea = document.getElementById('storyContent');
        const start = textarea.selectionStart;
        const end = textarea.selectionEnd;
        const before = textarea.value.substring(0, start);
        const after = textarea.value.substring(end);
        
        textarea.value = before + text + after;
        textarea.selectionStart = textarea.selectionEnd = start + text.length;
        textarea.focus();
        updateWordCount();
    }

    // Save story with enhanced ML tracking
    function saveStory() {
        const title = document.getElementById('storyTitle').value || 'Untitled Story';
        const content = document.getElementById('storyContent').value;
        const now = new Date().toISOString();
        
        const story = {
            id: currentStoryId || generateId(),
            title: title,
            content: content,
            wordCount: content.trim() ? content.trim().split(/\s+/).length : 0,
            createdAt: currentStoryId ? undefined : now,
            updatedAt: now
        };
        
        const stories = JSON.parse(localStorage.getItem('stories') || '[]');
        const existingIndex = stories.findIndex(s => s.id === story.id);
        
        if (existingIndex >= 0) {
            stories[existingIndex] = story;
        } else {
            stories.unshift(story);
        }
        
        localStorage.setItem('stories', JSON.stringify(stories));
        currentStoryId = story.id;
        
        document.getElementById('lastSaved').textContent = new Date().toLocaleString();
        loadRecentStories();
        
        // Enhanced ML Tracking
        try {
            const wordCount = content.trim() ? content.trim().split(/\s+/).length : 0;
            if (typeof mlTracker !== 'undefined') {
                mlTracker.trackWritingSession(wordCount);
            }
            
            // Update character-story connections
            const characters = JSON.parse(localStorage.getItem('characters') || '[]');
            if (typeof mlAnalyzer !== 'undefined') {
                mlAnalyzer.buildCharacterStoryConnections(stories, characters);
            }
        } catch (error) {
            console.error('Error in ML tracking:', error);
        }
        
        // Show save confirmation
        const btn = document.querySelector('.writer-controls .btn-primary');
        const originalText = btn.textContent;
        btn.textContent = '‚úì Saved!';
        setTimeout(() => {
            btn.textContent = originalText;
        }, 2000);
        
        // ALWAYS check for character extraction after save
        checkCharacterExtraction();
    }

    // Auto-save every 30 seconds
    function startAutoSave() {
        autoSaveInterval = setInterval(saveStory, 30000);
    }

    // Export story
    function exportStory() {
        const title = document.getElementById('storyTitle').value || 'Untitled Story';
        const content = document.getElementById('storyContent').value;
        
        const blob = new Blob([`# ${title}\n\n${content}`], { type: 'text/markdown' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        a.href = url;
        a.download = `${title.replace(/[^a-z0-9]/gi, '_').toLowerCase()}.md`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
    }

    // Toggle focus mode
    function toggleFocusMode() {
        document.body.classList.toggle('focus-mode');
        const btn = document.getElementById('focusModeBtn');
        btn.textContent = document.body.classList.contains('focus-mode') ? 'Exit Focus' : 'Focus Mode';
    }

    // Clear current prompt
    function clearPrompt() {
        window.location.href = '/writer';
    }

    // Generate unique ID
    function generateId() {
        return Date.now().toString(36) + Math.random().toString(36).substr(2);
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
        console.log('üìù Writer page loaded');
        
        // Make sure Extract Characters button is visible initially
        const extractBtn = document.getElementById('extractCharsBtn');
        extractBtn.style.display = 'inline-block';
        
        loadStory();
        
        // Auto-update word count AND check character extraction
        document.getElementById('storyContent').addEventListener('input', function() {
            updateWordCount();
            checkCharacterExtraction();
        });
        
        document.getElementById('storyTitle').addEventListener('input', function() {
            clearTimeout(this._timer);
            this._timer = setTimeout(saveStory, 1000);
        });
        
        // Quick save on Ctrl+S
        document.addEventListener('keydown', function(e) {
            if ((e.ctrlKey || e.metaKey) && e.key === 's') {
                e.preventDefault();
                saveStory();
            }
        });
    });
</script>        





